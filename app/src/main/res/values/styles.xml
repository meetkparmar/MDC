<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button.Outlined" parent="Button">
        <item name="android:paddingLeft">@dimen/padding_8dp</item>
        <item name="android:paddingRight">@dimen/padding_8dp</item>
        <item name="strokeColor">@color/colorPrimaryLight</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingLeft">@dimen/margin_8dp</item>
        <item name="android:paddingRight">@dimen/margin_8dp</item>
        <item name="iconTint">@color/white</item>
        <item name="iconPadding">@dimen/padding_4dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
    </style>

</resources>
