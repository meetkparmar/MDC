<resources>
    <!--Button-->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">8dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <!--EditText-->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="boxBackgroundColor">@color/colorAccent</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="editTextStyle">@style/ThemeOverlay.App.TextInputEditText</item>
    </style>

    <style name="ThemeOverlay.App.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--CardView-->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="cardElevation">8dp</item>
        <item name="cardMaxElevation">16dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

</resources>
